{
  "compilerOptions": {
    "target": "ESNext",
    "declaration": true,
    "outDir": "lib",
    "rootDir": "./src",
    "strict": true,
    "moduleResolution": "Bundler",
    "types": ["node","jest","mocha"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  },
  "include": ["src"],
  "exclude": ["src/__test__"]
}